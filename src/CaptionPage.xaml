<Page
    x:Class="LiveCaptionsTranslator.CaptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiveCaptionsTranslator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="CaptionPage"
    mc:Ignorable="d">

    <Page.DataContext>
        <local:Caption />
    </Page.DataContext>

    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <ui:TextBlock
                x:Name="Caption"
                Height="60"
                Margin="20,5,20,2.5"
                Background="#3a3a3a"
                FontSize="16"
                Foreground="White"
                Text="{Binding Original, UpdateSourceTrigger=PropertyChanged}" />
            <ui:TextBlock
                x:Name="TranslatedCaption"
                Height="60"
                Margin="20,2.5,20,5"
                Background="#3a3a3a"
                FontSize="16"
                Foreground="White"
                Text="{Binding Translated, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</Page>
